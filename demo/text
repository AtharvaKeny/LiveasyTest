import React, { useState } from 'react';

const LoginForm = () => {
  const [loginData, setLoginData] = useState({
    email: '',
    password: '',
  });

  const handleChange = (e) => {
    const { name, value } = e.target;
    setLoginData((prevData) => ({ ...prevData, [name]: value }));
  };

  const handleLogin = (e) => {
    e.preventDefault();

    // Retrieve stored user details from session storage
    const storedUserDetails = JSON.parse(sessionStorage.getItem('userDetails'));

    // Validate login credentials
    if (
      storedUserDetails &&
      loginData.email === storedUserDetails.email &&
      loginData.password === storedUserDetails.password
    ) {
      alert('Login successful!');
    } else {
      alert('Invalid email or password. Please try again.');
    }
  };

  return (
    <form onSubmit={handleLogin}>
      <label>
        Email:
        <input type="email" name="email" value={loginData.email} onChange={handleChange} />
      </label>
      <br />
      <label>
        Password:
        <input
          type="password"
          name="password"
          value={loginData.password}
          onChange={handleChange}
        />
      </label>
      <br />
      <button type="submit">Login</button>
    </form>
  );
};

export default LoginForm;
